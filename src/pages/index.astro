---
import Layout from "../layouts/Layout.astro";
import profilePhoto from "../assets/img/profile.jpg";
import github from "../assets/icons/github.svg";
import gScholar from "../assets/icons/scholar.svg";
import linkTree from "../assets/icons/linktree.svg";
import Stats from "../components/Stats.astro";
import rodentSvg from "../assets/icons/mammals.svg";
import Background from "../components/Background.astro";
import cntl from "cntl";
import MainPage from "../components/MainPage.astro";
import mail from "../assets/icons/mail.svg";
import cvIcon from "../assets/icons/curriculum-vitae.svg";
import myCv from "../assets/docs/hhandika-cv.pdf";
import PageDescription from "../components/PageDescription.astro";

const socialMediaData = [
  {
    name: "GitHub",
    url: "https://github.com/hhandika",
    alt: "Open my GitHub profile",
    icon: github,
  },
  {
    name: "Google Scholar",
    url: "https://scholar.google.com/citations?user=Jaub_M0AAAAJ&hl=en",
    alt: "Open my Google Scholar profile",
    icon: gScholar,
  },
  {
    name: "LinkTree",
    url: "https://linktr.ee/hhandika",
    alt: "Open my LinkTree profile",
    icon: linkTree,
  },
  {
    name: "Mail",
    url: "mailto:" + "hhandi1" + "@" + "lsu.edu",
    alt: "Send me an email",
    icon: mail,
  },
  {
    name: "CV",
    url: myCv,
    alt: "Download my CV",
    icon: cvIcon,
  },
];

const titleClasses = cntl`
  font-serif
  text-5xl
  text-chetwode-950
  dark:text-chetwode-50
  mt-2
`;

const heroTextClasses = cntl`
  mt-4
  text-pretty
  text-lg
  text-slate-700
  dark:text-slate-200
  sm:text-xl/8
`;

const socialMediaClasses = cntl`
  flex
  justify-center
  mt-4
  space-x-4
`;

const statsGridClasses = cntl`
  grid
  bg-gradient-to-r
  from-porsche-400
  to-chetwode-200
  dark:from-porsche-700
  dark:to-chetwode-600
  lg:grid-cols-3
  gap-4
  text-center
  rounded-2xl
  lg:rounded-full
  mt-24
  mx-8
  lg:mx-24
`;
---

<Layout title="Island small mammals and inclusive biodiversity software">
  <MainPage>
    <Background backgroundImage={rodentSvg} />
    <div class="text-center item-center mt-8 md:mt-16">
      <img
        class="block mx-auto h-32 lg:h-48 rounded-full sm:mx-auto"
        src={profilePhoto.src}
        alt="Handika's profile photo"
      />
      <h1 class={titleClasses}>
        Hi, I'm <strong>Heru Handika</strong>
      </h1>
      <PageDescription>
        PhD Candidate Â· Louisiana State University, USA
      </PageDescription>
      <p class={heroTextClasses}>
        I study small mammal diversity and speciation on islands and develop
        software to improve data integration and management, promote mutually
        beneficial international collaboration, and increase the accessibility
        of biodiversity research. My work encompasses conducting fieldwork in
        remote montane forests and developing computer programs that scale from
        mobile devices to high-performance computing clusters.
      </p>
    </div>
    <div class={socialMediaClasses}>
      {
        socialMediaData.map((item) => (
          <a
            href={item.name === "CV" ? item.url : item.url}
            target="_blank"
            rel="noopener"
          >
            <img
              src={typeof item.icon === "string" ? item.icon : item.icon.src}
              alt={item.alt}
              class="w-8"
            />
          </a>
        ))
      }
    </div>
    <div class={statsGridClasses}>
      <Stats title="Fieldwork" value="30" unit="expeditions" url="/fieldwork" />
      <Stats
        title="Specimen contribution"
        value="10k"
        unit="vouchers"
        url="/fieldwork"
      />
      <Stats title="Code written" value="130K" unit="lines" url="/software" />
    </div>
  </MainPage>
</Layout>
