---
import pdfIcon from "../../assets/icons/pdf.svg";
import webIcon from "../../assets/icons/internet.svg";

interface JournalArticle {
  author: string;
  year: string;
  title: string;
  journal: string;
  url: string;
  pdf: string;
}

const { author, year, title, journal, url, pdf } = Astro.props;
---

<div class="my-2 flex justify-between">
  <p class="text-chetwode-950 dark:text-chetwode-50">
    {
      author
        .split("Handika, H.")
        .map((part: string, index: number, array: string[]) => (
          <>
            {part}
            {index < array.length - 1 && (
              <strong class="text-chetwode-700 dark:text-chetwode-400">
                Handika, H.
              </strong>
            )}
          </>
        ))
    }. {year}. {title}. <em>{journal}</em>.
    <a href={url} target="_blank">
      <img src={webIcon.src} alt="Web" class="h-6 w-6 inline" />
    </a>
    <a href={pdf} target="_blank">
      <img src={pdfIcon.src} alt="PDF" class="h-6 w-6 inline" />
    </a>
  </p>
</div>
