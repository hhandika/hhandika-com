---
interface Stats {
  title: string;
  value: number;
  unit: string;
  url: string;
}

const { title, value, unit, url } = Astro.props;
---

<div class="p-4 rounded">
  <p class="text-chetwode-950">
    <a href={url}>
      {title}<svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8 inline opacity-80 ml-[-4px]"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1"
          d="m9.5 8.5h5v5m0-5-6 6"></path>
      </svg></a
    >

    <p class="text-chetwode-950">
      <strong class="font-bold text-chetwode-950 text-2xl">{value}+</strong>
      {unit}
    </p>
  </p>
</div>
