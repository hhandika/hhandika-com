---
import cntl from "cntl";

const pageTitleClasses = cntl`
    font-serif
    text-balance 
    text-2xl
    sm:text-4xl
    font-semibold 
    tracking-tight 
    text-porsche-800 
    dark:text-porsche-100
    mt-8
    mb-4
`;

const { subtitle } = Astro.props;
---

<div class="text-center my-8">
  <h2 class={pageTitleClasses}>{subtitle}</h2>
</div>
